lista_de_frutas = ["Maça", "Melancia", "Abacaxi"]

for i in range(5):
    nova_fruta = str(input("Digite o nome de uma fruta: "))
    lista_de_frutas.append(nova_fruta)

print(lista_de_frutas)


lista_de_frutas = ["Maça", "Melancia", "Abacaxi"]

lista_dos_excluidos = []

item_excluido = lista_de_frutas.pop(1)
lista_dos_excluidos.append(item_excluido)


print(lista_de_frutas)

print(f"O item removido foi o {item_excluido}")


