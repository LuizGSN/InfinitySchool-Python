while True:
    menu = int(input("""
        Escolha uma opção
        1 - Adicionar algo
        2 - Remover algo
        0 - Sair
"""))
    if menu == 1:
        print("Adicionei algo")
    elif menu == 2:
        print("Removi algo")
    elif menu == 0:
        break
    else:
        print("Opção inválida")


